      <img src="../images/category/{{_id}}.jpg" alt="Avatar" style="width:180px;height:180px;">
    </div>
    <div class="flip-card-back">
      <h1>{{name}}</h1>
    </div>
  </div>
  </a>
</div>
{{/each}}

</a>
